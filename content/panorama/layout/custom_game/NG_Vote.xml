<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/NG_Vote.css" />
	</styles> 
	<scripts>
		<include src="file://{resources}/scripts/custom_game/NG_Vote.js" /> 
	</scripts>
	<Panel class="NGplus_Vote" hittest="false">
		<Panel id="Vote" hittest="false">
			<Image id="BG_Image" src="file://{images}/custom_game/NG_Vote/BG.png"/>
			<Label hittest="false" id="question" text="Do you want to enter NewGame+ ?"/>
			<Label hittest="false" id="time_nb" text="60"/>
			<Label hittest="false" id="timer" text="seconds remaining"/>
			<Label hittest="false" id="confirmation"/>
			<Label hittest="false" id="noheader" text="No"/>
			<Label hittest="false" id="yesheader" text="Yes"/>
			<Label hittest="false" id="noresults" text="0 votes"/>
			<Label hittest="false" id="yesresults" text="0 votes"/>
			<Button id="Vote_Yes" onactivate='Yes()'>
				<Image id="yes_button" src="file://{images}/custom_game/NG_Vote/Yes_Button.png"/>
			</Button>
			<Button id="Vote_No" onactivate='No()'>
				<Image id="no_button" src="file://{images}/custom_game/NG_Vote/No_Button.png"/>
			</Button>
		</Panel>
	</Panel>
</root>